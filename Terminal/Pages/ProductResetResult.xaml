<Page x:Class="Terminal.Pages.ProductResetResult"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:fa="http://schemas.fontawesome.io/icons/"
      xmlns:local="clr-namespace:Terminal.Pages"
      mc:Ignorable="d"
      Title="Error" Height="472.253" Width="987.912">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Style="{StaticResource baseTextBlock}" Margin="0,0,0,20" Text="Blanqueo de PIN exitoso" TextWrapping="Wrap"/>
        <Button x:Name="backButton" HorizontalAlignment="Center" Click="backButton_Click" IsEnabled="{Binding CanGoBack}">
            <Button.Content>
                <WrapPanel VerticalAlignment="Center">
                    <fa:ImageAwesome Icon="LongArrowLeft" Height="38" Margin="0, 0, 20, 0" Foreground="WhiteSmoke"/>
                    <TextBlock VerticalAlignment="Center">Volver</TextBlock>
                </WrapPanel>
            </Button.Content>
        </Button>
    </StackPanel>
</Page>
