<Page x:Class="Terminal.Pages.Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Terminal.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Main">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <!-- Row 0 -->

        <Grid>
            <Button x:Name="pinButton" Content="Blanquear PIN" HorizontalAlignment="Center" Click="pinButton_Click"/>
        </Grid>

        <Grid Grid.Column="1">
            <Button x:Name="balanceButton" Content="Saldo CC" HorizontalAlignment="Center" Click="balanceButton_Click"/>
        </Grid>
        <!-- Row 0 -->

        <Grid Grid.Row="1">
            <Button x:Name="movementsButton" Content="Últimos movimientos" HorizontalAlignment="Center" Click="movementsButton_Click"/>
        </Grid>

        <Grid Grid.Row="1" Grid.Column="1">
            <Button x:Name="logoutButton" Content="Cerrar sesión" HorizontalAlignment="Center" Click="logoutButton_Click"/>
        </Grid>
    </Grid>
</Page>
