<Page x:Class="Terminal.Pages.Error"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Terminal.Pages"
      mc:Ignorable="d"
      Title="Error" Height="472.253" Width="987.912">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock x:Name="textBlock" HorizontalAlignment="Center" TextWrapping="Wrap" Margin="0,0,0,20" Text="{Binding Text}"/>
            <Button x:Name="backButton" Content="Volver" HorizontalAlignment="Center" Click="backButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
