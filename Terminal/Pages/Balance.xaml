<Page x:Class="Terminal.Pages.Balance"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Terminal.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Balance" Loaded="Page_Loaded">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock FontWeight="SemiBold" Margin="0, 0, 0, 20" HorizontalAlignment="Center">Cuenta corriente</TextBlock>
        <TextBlock HorizontalAlignment="Right" Margin="0, 0, 0, 20" Text="{Binding CurrentBalance, IsAsync=True, StringFormat=Saldo: {0:C}}"/>
        <Button x:Name="backButton" Content="Volver" HorizontalAlignment="Center" Click="backButton_Click"/>
    </StackPanel>
</Page>
