<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="{x:Type Control}" x:Key="baseStyle">
        <Setter Property="FontSize" Value="34" />
        <Setter Property="Width" Value="360px" />
        <Setter Property="Height" Value="72px" />
    </Style>
    
    <Style TargetType="Button" BasedOn="{StaticResource baseStyle}">
        <Setter Property="Background" Value="{DynamicResource Celeste}" />
    </Style>
    <Style TargetType="TextBlock">
        <Setter Property="FontSize" Value="38" />
    </Style>
    <Style TargetType="Label" BasedOn="{StaticResource baseStyle}"></Style>
    <Style TargetType="TextBox" BasedOn="{StaticResource baseStyle}"></Style>
    <Style TargetType="PasswordBox" BasedOn="{StaticResource baseStyle}"></Style>
    <Style TargetType="ListView" BasedOn="{StaticResource baseStyle}"></Style>


    <LinearGradientBrush x:Key="Celeste" EndPoint="0,1" StartPoint="0,0">
        <GradientStop Color="#FFDAFFFC" Offset="0"/>
        <GradientStop Color="#FFEBEBEB" Offset="0.5"/>
        <GradientStop Color="#FFA3D8D3" Offset="0.5"/>
        <GradientStop Color="#FF13635B" Offset="1"/>
    </LinearGradientBrush>

</ResourceDictionary>