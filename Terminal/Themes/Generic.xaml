<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="{x:Type Control}" x:Key="baseStyle">
        <Setter Property="FontSize" Value="38" />
        <Setter Property="Width" Value="360px" />
        <Setter Property="Height" Value="72px" />
    </Style>

    <Style TargetType="{x:Type Button}" BasedOn="{StaticResource baseStyle}"></Style>
    <Style TargetType="{x:Type Label}" BasedOn="{StaticResource baseStyle}"></Style>
    <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource baseStyle}"></Style>
    <Style TargetType="{x:Type PasswordBox}" BasedOn="{StaticResource baseStyle}"></Style>
    <Style TargetType="{x:Type ListView}" BasedOn="{StaticResource baseStyle}"></Style>

    <Style TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="38" />
    </Style>
    
    <LinearGradientBrush x:Key="Celeste" EndPoint="0,1" StartPoint="0,0">
        <GradientStop Color="#FFDAFFFC" Offset="0"/>
        <GradientStop Color="#FFEBEBEB" Offset="0.5"/>
        <GradientStop Color="#FFA3D8D3" Offset="0.5"/>
        <GradientStop Color="#FF13635B" Offset="1"/>
    </LinearGradientBrush>

</ResourceDictionary>